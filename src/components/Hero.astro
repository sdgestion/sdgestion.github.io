---
// Hero section component
---

<section id="inicio" class="relative bg-gradient-to-br from-primary-50 to-blue-100 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-12 pb-20 lg:pt-4 lg:pb-32">
    <div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
      <!-- Content -->
      <div class="mb-16 lg:mb-0">
        <!-- Company Logo -->
        <div class="mb-6">
          <img 
            src="/images/sdg_logo.png" 
            alt="Sistemas de Gestión Logo" 
            class="h-24 sm:h-28 lg:h-32 w-auto"
            loading="eager"
          />
        </div>
        
        <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 leading-tight">
          <span class="text-primary-600">Sistemas de Gestión</span><br>
          para tu negocio
        </h1>
        <p class="mt-6 text-xl text-gray-600 leading-relaxed">
          Expertos en <strong>sistemas de pesaje y TPV para comercios en España.</strong> 
          Ofrecemos soluciones integrales de balanzas comerciales y TPV VERIFACTU para comercios y hostelería, 
          con equipos de última generación adaptados a la nueva normativa de Hacienda.
        </p>
        
        <!-- VERIFACTU Badge -->
        <div class="mt-6 inline-flex items-center bg-white rounded-lg shadow-lg p-4 border-2 border-green-200">
          <img 
            src="/images/verifactu_logo.webp" 
            alt="VERIFACTU" 
            class="h-8 w-auto mr-3"
            loading="eager"
          />
          <div>
            <span class="text-green-700 font-semibold text-sm">CERTIFICADO</span>
            <p class="text-gray-600 text-sm">Cumple normativa VERIFACTU</p>
          </div>
        </div>
        
        <div class="mt-8 flex flex-col sm:flex-row gap-4">
          <a href="#productos" 
             class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 transition-colors duration-200">
            Ver Productos
            <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a href="#contacto" 
             class="inline-flex items-center justify-center px-8 py-3 border border-primary-600 text-base font-medium rounded-md text-primary-600 bg-white hover:bg-primary-50 transition-colors duration-200">
            Solicitar Presupuesto
          </a>
        </div>
        
        <!-- Features -->
        <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">VERIFACTU</p>
              <p class="text-sm text-gray-500">Certificado</p>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Instalación</p>
              <p class="text-sm text-gray-500">Rápida</p>
            </div>
          </div>
          
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 12h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Soporte</p>
              <p class="text-sm text-gray-500">24/7</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Image - Hidden on mobile, enhanced design -->
      <div class="relative hidden lg:block">
        <!-- Animated background elements -->
        <div class="absolute -top-4 -right-4 w-20 h-20 bg-primary-200/30 rounded-full blur-xl animate-pulse"></div>
        <div class="absolute -bottom-4 -left-4 w-16 h-16 bg-blue-200/40 rounded-full blur-lg animate-pulse delay-1000"></div>
        
        <!-- Main product showcase -->
        <div class="relative bg-gradient-to-br from-white via-blue-50/50 to-primary-50 rounded-3xl p-8 shadow-2xl border border-white/20">
          <!-- Header with premium badge -->
          <div class="flex items-center justify-between mb-6">
            <div>
              <h3 class="text-xl font-bold text-gray-800 mb-1">Sistema TPV Premium</h3>
              <p class="text-sm text-gray-600">Tecnología de última generación</p>
            </div>
            <div class="bg-gradient-to-r from-primary-500 to-blue-500 text-white px-3 py-1 rounded-full text-xs font-bold">
              NUEVO
            </div>
          </div>
          
          <!-- Product image with floating elements -->
          <div class="relative mb-6">
            <div class="w-80 h-52 mx-auto relative">
              <!-- Image glow effect -->
              <div class="absolute inset-0 bg-gradient-to-br from-primary-400/20 to-blue-400/20 rounded-xl blur-sm"></div>
              <img 
                src="/images/tpv3.png" 
                alt="Sistema TPV profesional" 
                class="relative w-full h-full object-cover rounded-xl shadow-xl transform hover:scale-105 transition-transform duration-300"
                loading="eager"
              />
              
              <!-- Floating info cards -->
              <div class="absolute -top-3 -right-3 bg-white rounded-lg shadow-lg p-2 transform rotate-6 hover:rotate-12 transition-transform">
                <div class="flex items-center">
                  <div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center mr-2">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="text-xs font-bold text-green-700">VERIFACTU</span>
                </div>
              </div>
              
              <div class="absolute -bottom-3 -left-3 bg-white rounded-lg shadow-lg p-2 transform -rotate-6 hover:-rotate-12 transition-transform">
                <div class="flex items-center">
                  <div class="w-6 h-6 bg-blue-100 rounded-full flex items-center justify-center mr-2">
                    <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                  </div>
                  <span class="text-xs font-bold text-blue-700">Rápido</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Enhanced features grid -->
          <div class="grid grid-cols-2 gap-3">
            <div class="bg-white/60 backdrop-blur-sm rounded-lg p-3 border border-white/30">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-xs font-bold text-gray-800">Certificado</p>
                  <p class="text-xs text-gray-600">100% Legal</p>
                </div>
              </div>
            </div>
            
            <div class="bg-white/60 backdrop-blur-sm rounded-lg p-3 border border-white/30">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                </div>
                <div>
                  <p class="text-xs font-bold text-gray-800">Premium</p>
                  <p class="text-xs text-gray-600">Calidad top</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>